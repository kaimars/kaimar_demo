@page
@model BidModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Bacchus.CustomerWeb.Extensions
@{
    ViewData["Title"] = "Home page";
}
<div class="container">
@if(Model.Completed)
{
    <div class="row justify-content-center">
    <div class="alert alert-success" role="alert">
    <h4 class="alert-heading">Well done!</h4>
    <p>Your bid was successfully posted. <a asp-page="./Index" class="btn btn-primary">Go on to other auctions</a></p>
    </div>
    </div>
} 
    <div class="row justify-content-center">
    <div class="card w-50">
    <div class="card-body">
        <h5 class="card-title">@Model.Auction.ProductName</h5>
        <p class="card-text">@Model.Auction.ProductDescription</p>
        <p class="card-text">Time remanining @((Model.Auction.BiddingEndDate - DateTime.Now).ToUiString()). The auction ends at (@Model.Auction.BiddingEndDate.ToString("yyyy-MM-dd HH:mm") GMT)</p>
        <h5 class="card-title">Your bid</h5>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <input asp-for="Auction.ProductId" type="hidden" />
        <input asp-for="Auction.ProductName" type="hidden" />
        <input asp-for="Auction.ProductCategory" type="hidden" />
        <input asp-for="Auction.ProductDescription" type="hidden" />
        <input asp-for="Auction.BiddingEndDate" type="hidden" />
        <div class="form-group row">
            <label asp-for="Username" class="col-3 col-form-label"></label>
            <div class="col-9">
                <input asp-for="Username" />
                <span asp-validation-for="Username" class='validation-error'></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-3 col-form-label"></label>
            <div class="col-9">
                <input asp-for="Price" />
                <span asp-validation-for="Price" class='validation-error'></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
            </div>
            <div class="col-9">
            <button type="submit" class="btn btn-primary">Submit bid</button>
            <a asp-page="./Index" class="btn btn-outline-primary">Cancel</a>
            </div>
        </div>
    </form>

    </div>
    </div>
    </div>
</div>
